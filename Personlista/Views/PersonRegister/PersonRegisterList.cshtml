@using Personlista.Models
@model Personlista.ViewModel.PersonRegisterListViewData

@using (Html.BeginForm("PersonRegisterListResult", "PersonRegister", FormMethod.Post, new { role = "form", id = "personSearchForm" }))
{
    <div style="margin-top:30px;">
        <div style="float:left; padding: 15px;">
            <p>Filtrera efter sökord</p>
            @Html.TextBoxFor(model => model.SearchRequest.SearchString, new { id = "searchString", placeholder = "Sök", @class = "filterInput" })
        </div>

        <div style="float:left; padding: 15px;">
            <p>Antal resultat per sida</p>

            <label>
                @Html.RadioButtonFor(model => model.SearchRequest.DisplayNumber, DisplayNumber.Display10, new {@class = "filterInput" })
                10 st
            </label>
            <label>
                @Html.RadioButtonFor(model => model.SearchRequest.DisplayNumber, DisplayNumber.Display50, new { @class = "filterInput" })
                50 st
            </label>
            <label>
                @Html.RadioButtonFor(model => model.SearchRequest.DisplayNumber, DisplayNumber.Display100, new { @class = "filterInput" })
                100 st
            </label>
        </div>

        <button id="saveAllNewPersonsBtn" class="btn btn-success" type="button" style="float:right;">Spara alla nya poster</button>
    </div>

    <div style="clear: both; padding:15px;">
        <p>Lägg till en ny person</p>

        @Html.TextBoxFor(model => model.CreateRequest.CreatedPerson.FirstName, new {id= "CreateFirstName", placeholder = "Förnamn", @class = "createInput" })
        @Html.TextBoxFor(model => model.CreateRequest.CreatedPerson.LastName, new {id = "CreateLastName", placeholder = "Efternamn", @class = "createInput" })
        @Html.TextBoxFor(model => model.CreateRequest.CreatedPerson.PersonNumber, new { id = "CreateSocialSecurityNumber", placeholder = "Personnummer", @class = "createInput" })
        @Html.TextBoxFor(model => model.CreateRequest.CreatedPerson.PersonType, new { id = "CreatePersonType", placeholder = "Persontyp", @class = "createInput" })
        <button id="addPersonBtn" class="btn btn-info" type="button" style="padding:5px;"> Lägg till </button>
    </div>
}

<div id="searchResult" style="clear: both; border: 1px solid #ccc; padding: 15px; margin: 15px;">
    @Html.Action("PersonRegisterListResult", Model.SearchRequest)
</div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<script src="~/scripts/custom/formscript.js"></script>
<script src="~/scripts/custom/createpersonscript.js"></script>